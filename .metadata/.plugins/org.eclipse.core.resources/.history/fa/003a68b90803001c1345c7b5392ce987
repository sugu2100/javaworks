package exercise;

public class Person {
	int age;           //나이
	String name;       //이름
	boolean isMerried; //결혼여부
	int numberOfChild; //자녀수
	
	public Person() {}   //기본 생성자
	
	//정보 메서드
	public void showInfo() {
		System.out.println("나이 : " + age);
		System.out.println("이름 : " + name);
		System.out.println("결혼여부 : " + isMerried);
		System.out.println("자녀수 : " + numberOfChild);
	}
}
